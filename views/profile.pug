extends layout.pug



block content
    div
        h2 #{user.username}
    div
        h4 Details
            ul
                li #{user.firstName}
                li #{user.lastName}
                li #{user.email}
    div
        h4 Activity
            ul
                li Joined In #{user.createdAt}
                li Total Reviews: #{totalReviews}
                li Total Review Likes: #{totalReviewLikes}
    div
        h4 #{user.firstName}'s Game Library Shelves
            each shelf in shelves
                ul
                    li #{shelf.name}(#{shelf.Games.length})
