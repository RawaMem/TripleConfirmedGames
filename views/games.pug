extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js

  script(src="/javascripts/games.js" type="module" defer)

block content
  link(rel='stylesheet' href='/stylesheets/browseGames.css')
  div.header
    h1= title
  //- p TripleConfirmedGames
