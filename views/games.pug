  div.parentContainer
    each game in games
      div.listedGame
        a(href=`/games/${game.id}`, class='atag')
          img(src=`${game.url}`, alt="video game image", class='gamePic')
        div.gameTitle
          a(href=`/games/${game.id}`, class='gameTitleText') #{game.title}
